/* components/mapGame/mapGame.wxss */
.map-game,.map-game .main{
  width: 100%;
  height: 100vh;
  position: relative;
}
.map-game .main .map{
  display: block;
  width: 1448rpx;
  height: 1448rpx;
  position: absolute;
  background: url('https://www1.pcauto.com.cn/test/gz20220701/phaser3/json/kl/web/assets/bg.8dfe68a4.png') no-repeat;
  background-size: 100% 100%;
  top: 0;
  left: 0;
  z-index: 10;
}
.map-game .main .map image{
  display: block;
  width: 100%;
  height: 100%;
}
.map-game .main .map .icon{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 500rpx;
  left: 500rpx;
  z-index: 10;
  border-radius: 50%;
  overflow: hidden;
}